<!-- search bar -->
{{> searchBar}}
<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      {{!-- change sorting list columns to rows--}}
      <div class="row row-cols-1 row-cols-md-3">
        {{!-- foreach loop for dynamic data--}}
        {{#each restaurants}}
        <div class="text-secondary mb-2 px-1 restaurant">
          <a href="/restaurants/{{ this._id }}" class="card" id="{{ this._id }}">
            <div class="cardImage">
              <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}" />
              {{!-- Add favorite switch btn --}}
              <button class="favorite" onclick="location.href='/'">
                <i class="far fa-heart fa-lg regular"></i>
                <i class="fas fa-heart fa-lg solid"></i>
              </button>
            </div>

            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>

              <div class="restaurant-category mb-1"><i class="fas fa-utensils pr-2"></i> {{ this.category }}</div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </a>
          <ul class="d-flex justify-content-end mt-2 mb-4">
            <li class="mr-3 contentIcon">
              <a href="#" class="contentIcon" data-toggle="modal" data-target="#editModal"
                ><i class="fas fa-edit fa-lg"></i
              ></a>
            </li>
            <li class="mr-3 contentIcon">
              <a href="/restaurants/{{ this._id }}" class="contentIcon"><i class="fas fa-info-circle fa-lg"></i></a>
            </li>
            <li class="mr-3 contentIcon">
              <a href="#" class="contentIcon trash" data-toggle="modal" data-target="#deleteModal"
                ><i class="fas fa-trash fa-lg"></i
              ></a>
            </li>
          </ul>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="deleteModalLabel">確定刪除？</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="deleteContent">待刪除餐廳：</div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
        <form action="#" method="post" id="deleteForm">
          <button type="submit" class="btn btn-danger">刪除</button>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-warning">
        <h5 class="modal-title" id="editModalLabel">修改餐廳資訊</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="#" method="post" id="deleteForm">
        <div class="modal-body" id="deleteContent">
          <div class="form-group">
            <label for="inputName">餐廳名稱</label>
            <input type="text" class="form-control" id="inputName" placeholder="餐廳名稱" />
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="restaurantPhone">餐廳電話</label>
              <input type="tel" class="form-control" id="restaurantPhone" placeholder="餐廳電話" />
            </div>
            <div class="form-group col-md-6">
              <label for="restaurantClass">餐廳類別</label>
              <input
                type="text"
                class="form-control"
                id="restaurantClass"
                placeholder="餐廳類別，EX: 日本料理、中式餐點"
              />
            </div>
          </div>
          <div class="form-group">
            <label for="restaurantAddress">地址</label>
            <input type="text" class="form-control" id="restaurantAddress" placeholder="餐廳地址" />
          </div>
          <div class="form-group">
            <label for="restaurantDescription">餐廳描述</label>
            <textarea class="form-control" id="restaurantDescription" rows="3" placeholder="餐廳描述"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
          <button type="submit" class="btn btn-warning">儲存</button>
        </div>
      </form>
    </div>
  </div>
</div>
