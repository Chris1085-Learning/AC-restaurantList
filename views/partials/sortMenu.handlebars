<div class="dropdown mb-3 text-right">
  <form action="/restaurants/sort_by" method="GET" id="sortForm">
    <select class="custom-select" id="sortSelect" onchange="this.form.submit();" name="sortInfo">
      <option selected value="_id-asc">排序方式</option>
      <option value="name-asc">名稱 A->Z</option>
      <option value="name-desc">名稱 Z->A</option>
      <option value="category-asc">類別 A->Z</option>
      <option value="category-desc">類別 Z->A</option>
      <option value="rating-descending">評分 由高至低</option>
      <option value="rating-ascending">評分 由低至高</option>
    </select>
  </form>
</div>
